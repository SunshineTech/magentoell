<config>
    <sections>
        <sdm_banner translate="label" module="slider">
            <label>Banner Ads Unit</label>
            <tab>sdm_core</tab>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="slider">
                    <label>SDM Banner Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="slider">
                            <label>Enable Banner</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <limit translate="label" module="slider">
                            <label>Limit Banner</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Note: This is will limit your Banner Ads Unit that will shown on the frontend.]]></comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </limit>
                    </fields>
                </general>
            </groups>
        </sdm_banner>
    </sections>
</config>
