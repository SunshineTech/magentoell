<config>
    <modules>
        <SDM_CatalogCrumb>
            <version>0.2.0</version>
        </SDM_CatalogCrumb>
    </modules>
    <global>
        <models>
            <sdm_catalogcrumb>
                <class>SDM_CatalogCrumb_Model</class>
                <resourceModel>catalogcrumb_resource</resourceModel>
            </sdm_catalogcrumb>
            <catalogcrumb_resource>
                <class>SDM_CatalogCrumb_Model_Resource</class>
                <entities>
                    <crumb>
                        <table>sdm_catalog_crumb</table>
                    </crumb>
                </entities>
            </catalogcrumb_resource>
        </models>
        <resources>
            <sdm_catalogcrumb>
                <setup>
                    <module>SDM_CatalogCrumb</module>
                </setup>
            </sdm_catalogcrumb>
        </resources>
    </global>
</config>
