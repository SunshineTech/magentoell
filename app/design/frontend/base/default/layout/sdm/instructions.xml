<layout version="0.1.0">
    <instructions_page>
    	<reference name="root">
    		<action method="setTemplate">
                <template>sdm/instructions/page/2columns-left.phtml</template>
            </action>
            <block type="sdm_instructions/page" template="sdm/instructions/view/search.phtml" name="instructions.search" />
    	</reference>
        <reference name="left">
            <block type="sdm_instructions/page" name="instructions.filter" template="sdm/instructions/view/filter.phtml" />
        </reference>
    	<reference name="content">
            <block type="sdm_instructions/page" name="instructions.list" template="sdm/instructions/view/list.phtml" />
        </reference>
    </instructions_page>
</layout>
