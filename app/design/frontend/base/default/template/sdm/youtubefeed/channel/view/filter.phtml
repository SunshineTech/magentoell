        <li<?php echo $_playlistId == $_playlist->getId() ? ' class="selected"' : '' ?>><a href="<?php echo $this->getUrl('*/*/*', array('id' => $this->getChannel()->getId(), 'playlist' => $_playlist->getId())) ?>"><?php echo $_playlist->getName() ?></a></li>
        <?php endforeach ?>
    </ul>
</div>