$_playlistId = $this->getCurrentPlaylistId();
?>
<div class="filter-tab channel-view-filter">
    <ul>
        <li<?php echo $_playlistId === false ? ' class="selected"' : '' ?>><a href="<?php echo $this->getUrl('*/*/*', array('id' => $this->getChannel()->getId())) ?>"><?php echo $this->__('%s Videos Home', $this->getChannel()->getName()) ?></a></li>
