<?php 
	$_product = $this->getProduct();

	// What do we want to show?
	if ($this->getLocation() === 'top') {
		// If top sharing link, only show for grouped products and don't show list elements
		$_showList = false;
		$_showLink = $_product->getTypeId() === 'grouped' && $this->canEmailToFriend();
	} else {
		// If normal sharing link, only show for simple products and show list elements
		$_showList = true;
		$_showLink = $_product->getTypeId() === 'simple' && $this->canEmailToFriend();
	}

	$_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); 
?>

<?php if ($_showLink): ?>
	<?php if ($_showList): ?>
		<li class="email-friend">
	<?php endif; ?>
	<div class="emailtoafriend">
    	<a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>" class="link-email-friend" title="<?php echo $this->__('Email to Friend') ?>"><?php echo $this->__('Email to Friend') ?></a>
   	</div>
    <?php if ($_showList): ?>
		</li>
	<?php endif; ?>
<?php endif; ?>

<?php if ($_showList): ?>
	</ul>
<?php endif; ?>
